<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/vk_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

<RelativeLayout
    android:id="@+id/root_constraint"
    android:background="@color/vk_light_color"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:padding="@dimen/default_padding"
        android:scaleType="centerCrop"
        android:id="@+id/friends_photo"
        android:src="@drawable/ic_launcher_background" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friends_photo"
        android:id="@+id/friend_name"
        android:padding="@dimen/default_padding"
        tools:text="Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_name"
        android:id="@+id/friend_surname"
        android:padding="@dimen/default_padding"
        tools:text="Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


</RelativeLayout>
</androidx.cardview.widget.CardView>